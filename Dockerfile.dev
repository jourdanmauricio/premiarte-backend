FROM node:18-alpine

WORKDIR /app

# Copiar package.json primero para cachear dependencias
COPY package*.json ./

# Instalar todas las dependencias (incluyendo devDependencies)
RUN npm install

# Copiar todo el c√≥digo fuente
COPY . .

# Exponer el puerto de Strapi
EXPOSE 1337

# Usar develop para hot reload
CMD ["npm", "run", "develop"]
